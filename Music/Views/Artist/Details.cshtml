@model Music.Application.ModelsDto.Artist.ArtistReadDto

@{
    ViewData["Title"] = "Детали исполнителя";
}

<div class="container mt-5">
    <h2>Информация об исполнителе</h2>
    <div class="row">

        <div class="card mt-4 col-md-9" style="height: 300px;">
            <div class="row g-0 h-100">
                <div class="col-md-4 h-100">
                    <img src="@Model.UrlImg"
                         class="img-fluid rounded-start h-100 w-100"
                         style="object-fit: contain;"
                         alt="@Model.Name">
                </div>
                <div class="col-md-8">
                    <div class="card-body h-100">
                        <h5 class="card-title">@Model.Name</h5>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex flex-column col-md-3 mt-3">

            <a asp-controller="Album"
               asp-action="Create"
               asp-route-id="@Model.Id"
               class="btn btn-secondary mt-2">Добавить альбом</a>

            <a class="btn btn-secondary mt-2">Добавить песню</a>

            <a asp-action="Update"
               asp-controller="Artist"
               asp-route-id="@Model.Id"
               class="btn btn-secondary mt-2">Редактировать карточку артиста</a>

            <a asp-controller="Artist"
               asp-action="Index"
               class="btn btn-secondary mt-2">Назад</a>
        </div>

    </div>
    <div class="row mt-4">
        <div class="col-md-6">
            <h3>Альбомы</h3>
            <div class="d-flex flex-column">

            </div>
        </div>
        <div class="col-md-6">
            <h3>Лучшие песни</h3>
            <div class="d-flex flex-column">

            </div>
        </div>
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">
        @TempData["ErrorMessage"]
    </div>
}
