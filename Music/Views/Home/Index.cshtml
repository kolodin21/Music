@using Music.Views.Shared.Components
@model Music.ViewModels.Home.HomeIndexViewModel

<div class="d-flex flex-column min-vh-100">
    <div class="container py-5 mb-5">

        <h1 class="text-center mb-5">Популярные Артисты</h1>

        <div class="row">
            @foreach (var artist in Model.Artists)
            {
                <a asp-controller="Artist"
                   asp-action="Details"
                   asp-route-id="@artist.Id"
                    class="col-md-4 col-lg-3 mb-4">
                    <div class="card album-card">
                        <img src="@artist.UrlImg" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@artist.Name</h5>
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
    @Html.ErrorMessage(@TempData["ErrorMessage"] as string)
</div>

@await Component.InvokeAsync("Pagination",Model.Pagination)
