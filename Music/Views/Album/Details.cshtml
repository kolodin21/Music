@using Music.Views.Shared.Components
@using Music.Views.Shared
@model Music.Application.ModelsDto.Album.AlbumReadDto

<!-- Шапка альбома -->
<div class="album-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-3 text-center text-md-start">
                <img src="@Model.UrlImg"
                     alt="Обложка альбома"
                     class="img-fluid rounded album-cover">
            </div>
            <div class="col-md-9 mt-4 mt-md-0">
                <h1>@Model.Name</h1>
                <p class="card-title d-flex align-items-center flex-wrap gap-3">
                    <span class="card-title-info m-2">
                        <i class="fas fa-user-alt"></i>@Model.ArtistName
                    </span>
                    <span class="separator">•</span>
                    <span class="card-title-info">
                        <i class="fas fa-calendar-alt"></i>@Model.YearOfIssue
                    </span>
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Основное содержимое -->
<div class="container">
    <div class="row">
        <!-- Список треков -->
        <div class="col-lg-10">
            @Html.SongsList(new SongList
            {
                Songs = Model.Songs,
                NameList = "Все песни"
            })
        </div>
    </div>
</div>
